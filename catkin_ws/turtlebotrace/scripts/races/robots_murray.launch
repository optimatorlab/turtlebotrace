<launch>
	<!-- No namespace here as we will share this description. 
	   Access with slash at the beginning -->

<!--
	<arg name="base" value="kobuki"/>
	<arg name="stacks" value="hexagons"/>
	<arg name="3d_sensor" value="kinect"/>
-->

	<!-- BEGIN ROBOT 1-->
	<group ns="robot1">
		<param name="tf_prefix" value="robot1_tf" />
		<include file="$(find turtlebotrace)/scripts/races/one_robot.launch" >
			<arg name="init_pose" value="-x 0 -y 0 -z 0" />
			<arg name="robot_name"  value="Robot1" />
			<arg name="base" value="kobuki"/>
			<arg name="stacks" value="hexagons"/>
			<arg name="3d_sensor" value="kinect"/>	
			<arg name="color" value="red"/>	
		</include>
	</group>

	<!-- BEGIN ROBOT 2-->  
	<group ns="robot2">
		<param name="tf_prefix" value="robot2_tf" />
		<include file="$(find turtlebotrace)/scripts/races/one_robot.launch" >
			<arg name="init_pose" value="-x 1 -y 0 -z 0" />
			<arg name="robot_name"  value="Robot2" />
			<arg name="base" value="kobuki"/>
			<arg name="stacks" value="hexagons"/>
			<arg name="3d_sensor" value="kinect"/>
			<arg name="color" value="blue"/>	
		</include>
	</group> 
	
	
	<!-- NEED TO CREATE ROBOTS 3 THRU 10 -->
	<!-- Use these colors in order (the tower will announce the ID/color pairing so you know which robot is yours):
	green
	orange
	purple
	pink
	yellow
	white
	black
	brown	
	-->

</launch>
